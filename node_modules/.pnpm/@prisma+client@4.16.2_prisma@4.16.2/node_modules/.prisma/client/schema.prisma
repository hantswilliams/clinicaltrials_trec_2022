model terms {
  id           Int            @id @default(autoincrement())
  term         String         @unique
  definition   String?
  examples     String?
  tags         String?
  synonyms     String?
  antonyms     String?
  related      String?
  createdAt    DateTime       @default(now())
  documentterm documentterm[]
}

model documentterm {
  id        Int      @id @default(autoincrement())
  document  String
  termId    Int
  count     Int
  createdAt DateTime @default(now())
  terms     terms    @relation(fields: [termId], references: [id])
}




